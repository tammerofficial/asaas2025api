# Disable ETags (we use Cache-Control instead)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Enable HTTP/2 Server Push (if supported)
<IfModule mod_http2.c>
    H2Push on
    H2PushPriority * after
    H2PushPriority text/css before
    H2PushPriority application/javascript after
    H2PushPriority image/jpeg after
    H2PushPriority image/png after
    H2PushPriority image/webp after
</IfModule>

# Optimize file access
<IfModule mod_setenvif.c>
    SetEnvIf Request_URI "\.gif$" object_is_image=gif
    SetEnvIf Request_URI "\.png$" object_is_image=png
    SetEnvIf Request_URI "\.jpe?g$" object_is_image=jpg
    SetEnvIf Request_URI "\.webp$" object_is_image=webp
</IfModule>

